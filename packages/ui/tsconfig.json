{
	"compilerOptions": {
		"target": "ESNext",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "NodeNext",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"include": [
		"**/src/**/*.js",
		"**/src/**/*.ts",
		"**/src/**/*.svelte",
		"**/types/**/*.ts",
		"*.cjs",
		".*.cjs",
		"*.js",
		"*.ts"
	]
}
